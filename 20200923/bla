if(!empty($_POST)){
    $select .= "WHERE (1=1)";
    if(isset($_POST["sexo"])){
        $sexo= $_POST["sexo"];
        $select.= "AND sexo = '$_POST["sexo"]'";
    }
    if($_POST["nome"]!=""){
        $nome = $_POST["nome"];
        $select.= "AND nome LIKE '%nome%'";
    }
    if($_POST[data_nasc]!= ""){
        $data_nasc= $_POST[data_nasc];
        $select .= AND data_nascimento > '$data_nasc';
    }
}